main() {
  case "$OSTYPE" in
    "linux-gnu")
      echo "linux" ;;
    "linux-android")
      echo "android" ;;
    "darwin"*)
      echo "macos" ;;
    "cygwin")
      echo "cygwin" ;;
    "msys")
      # Lightweight shell and GNU utilities compiled for Windows (part of MinGW)
      echo "msys" ;;
    "win32")
      # I'm not sure this can happen.
      echo "mingw" ;;
    "freebsd"*)
      echo "bsd" ;;
    *)
      echo "unknown" ;
      return 1 ;;
  esac
  return 0
}

main "$@" || exit 1
