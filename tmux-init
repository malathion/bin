#/usr/bin/env bash

#
# initialize preconfigured tmux sessions if they
# are not found, and join the shell session
#

set -x

configdir="$HOME/.config/tmux"

    # 
    # shell
    # 
if [[ ! $(tmux has-session -t shell) ]]; then
    tmux new-session -d -s shell  
    tmux -t shell -2 -f "$configdir/tmux.conf" attach 
fi
    #
    # ncurses apps
    #
#if [[ ! $(tmux has-session -t ncurses) ]]; then
#    tmux new-session -d -s ncurses 
#    tmux source-file "$configdir/tmux-ncurses.conf"
#fi
    # 
    # system
    # 
if [[ ! $(tmux has-session -t system) ]]; then
    wait 1
fi
