# shell script to produce my statusbar mesage way better than i3bar
#
#
# Functions {{{1
verbose() {
  if [[ "$verbose" = "1" ]]; then
    echo "$1" >&2
  fi
}

error() {
  echo "$1" >&2
}
# }}}
# Usage {{{1
#
usage() {
cat <<EOD
statusbar
© Copyright 2014 Ryan Delaney. All rights reserved.
Web site: http://github.com/rpdelaney

statusbar prints out a status bar just how I like it.

Usage: statusbar [OPTION]

Options
  -?, --help                  print this help and exit
  -v, --verbose               increase verbosity
EOD
exit 1
}
# }}}
# Main {{{1
while sleep 2; do
  date="$(date +'%R %a %b %d')"

  # Glyphs {{{2
  if [[ -n "$database" ]]; then
    db=""
  else
    unset db
  fi

  if [[ -n "$music" ]]; then
    :
#   note=U+f1b6
  else
    unset note
  fi

  if [[ -n "$printer" ]]; then
    :
#   print=U+f1cc
#   print=U+f1cd
  else
    unset print
  fi
  # 2}}}
  # Tests {{{2
  # }}}
  echo "$db $music $print $date" || exit 1
done
# }}}


