#   Try to open a file, and then ask me if I want to delete it.

if [[ -r "$1" ]]; then
  mpv "$1"
else
  echo "$1 is not a readable file." 1>&2
  exit 1
fi

confirm "Delete the file? $1 " && >"$1" || exit 0

# vim: filetype=sh foldmethod=marker shiftwidth=2 expandtab softtabstop=4:
