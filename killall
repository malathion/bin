if ! type psx &> /dev/null; then echo "Missing dependency: psx" 1>&2; exit 1; fi

while read -r line; do
  kill "$line"
done < <(psx "$1")

# vim: filetype=sh foldmethod=marker shiftwidth=2 expandtab softtabstop=4:
