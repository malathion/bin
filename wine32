# Functions {{{1
verbose() {
  if [[ "$verbose" -ge "1" ]] && [[ -z "$quiet" ]]; then
    echo "$1" >&2 || return 1
  fi
}

error() {
  if [[ -z "$quiet" ]]; then
    echo "$1" >&2 || return 1
  fi
}
# 1}}}

if [[ -d "/media/apps/wine32" ]]; then
  prefix="/media/apps/wine32"
else
  error "Prefix directory not found: $prefix"
  exit 1
fi

export WINEPREFIX="$prefix"
export WINEARCH=win32

if [[ -n "$@" ]]; then
  wine "$@"
fi

# vim: ft=sh foldmethod=marker:
