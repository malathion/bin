main() {
  year="$(date +'%Y' || exit 1)"
  holder="${COPYRIGHT_HOLDER:-"Ryan Delaney"}"
  claim="${COPYRIGHT_CLAIM:-"All rights reserved"}"
  printf '%s %s. %s.' "© Copyright $year" "$holder" "$claim" || return 1

  if [ "$1" = '-n' ]; then
    printf '\n' || return 1
  fi
}

main "$@" || exit 1

