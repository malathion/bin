# Changes filename(s) to UTF-8 upper case

if ! type convmv &> /dev/null; then echo "ERROR: Missing dependency: convmv" 1>&2; exit 1; fi

convmv --upper -f UTF-8 --notest "$*"

# vim: filetype=sh foldmethod=marker shiftwidth=2 expandtab softtabstop=4:
