fixhl() {
        #'cp' "$1" "$1".bak
        #'rm' "$1";
        #ln -s /home/ryan/dotfiles/home/"$1";
        file1="$1";
        file2="/home/ryan/dotfiles/home/""$1";

        #diff "$1" /home/ryan/dotfiles/home/"$1";

        if diff -q "$file1" "$file2"; then 
                rm "$1"
                ln -s "$file2" .
                echo "File replaced with a symlink."
        fi;
}
