main() {
  for file in "$@"; do
    if ! python -c "import csv,json,fileinput; print(json.dumps(list(csv.reader(fileinput.input()))))" "$file" 1> "${file%%csv}json" ; then
      exit_code="$?"
    fi
  done

  return "${exit_code:-0}"
}

main "$@"
exit $?
