# I have no idea if this works

main() {
  # download album art from amazon
  local y="$*"
  awk '/View larger image/{gsub(/^.*largeImagePopup\(.|., .*$/,"");print;exit}' <(curl -s 'http://www.albumart.org/index.php?srchkey='"${y// /+}"'&itempage=1&newsearch=1&searchindex=Music')
}

main "$@"
